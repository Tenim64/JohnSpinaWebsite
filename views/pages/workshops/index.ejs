<!DOCTYPE html>
<html lang="Nl-be" dir="ltr">
  <head>
    <%- include('../../templates/head.ejs') %>
    <title>John Spina | Workshops</title>
  </head>
  <body>
    <div id="container">
      <%- include('../../templates/header.ejs') %>
      <div id="content" class="container-fluid pb-0">
        <div class="row" id="workshops-wrapper">
          <div class="col col-12 col-md-6 col-lg-4 py-2 px-0">
            <h1 class="ps-4 pb-3">Workshops</h1>
            <div class="grid" id="workshops">
              <% for(let workshopIndex = 0; workshopIndex < workshops.length; workshopIndex++) {%>
                <div class="g-col-12 px-3 mt-1 pt-2 pb-3">
                  <h3 class="mb-2 pb-2 px-2"><a class="link-custom" href="#<%= workshopIndex %>"><%= workshops[workshopIndex].titel %></a></h3>
                  <i class="bi bi-clock pe-2 ps-2"></i><span class="fs-5 mb-0 pe-2"><%= workshops[workshopIndex].datum %></span><br>
                  <i class="bi bi-pin pe-2 ps-2"></i><span class="fs-5 mb-0 pe-2"><%= workshops[workshopIndex].locatie %></span><br>
                  <i class="bi bi-cash-coin pe-2 ps-2"></i><span class="fs-5 mb-0 pe-2"><%= workshops[workshopIndex].prijs %></span>
                </div>
              <% } %>
            </div>
          </div>
          <div class="col col-0 d-none col-md-6 d-md-block col-lg-8 pe-3 pb-3 ps-0" id="map-wrapper">
            <div class="placeholder"></div>
            <% for(let workshopIndex = 0; workshopIndex < workshops.length; workshopIndex++) {%>
              <%- workshops[workshopIndex].iframe %>
            <% } %>
          </div>
        </div>
      </div>
      <%- include('../../templates/footer.ejs') %>
    </div>
    <%- include('../../templates/foot.ejs') %>
    <script src="js/workshopMapManager.js"></script>
  </body>
</html>
